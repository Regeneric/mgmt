{
  "name": "wgec",
  "productName": "WGEC",
  "description": "WebGL Electron Canvas - Scientific Calculator",
  "author": "Hubert Batkiewicz <hbatkiewicz898@gmail.com> (https://github.com/Regeneric)",
  "contributors": [
    "Gabriel Kr√≥l <werander.k@gmail.com>",
    "Patryk Piszczek <patrykpiszczek3@gmail.com>"
  ],
  "version": "0.3.1",
  "license": "GPLv3",
  "private": true,
  "main": "main.js",
  "engines": {
    "electron": ">= 4.0.4",
    "node": ">= 10.11.0",
    "npm": ">= 6.9.0"
  },
  "scripts": {
    "dev": "git checkout develop && npm install && electron main.js",
    "start": "git checkout master && npm install && electron main.js",
    "current": "electron main.js",
    "pack": "build --dir",
    "build": "build"
  },
  "build": {
    "appId": "com.electron.wgec",
    "mac": {
      "icon": "img/wgec-icon.svg",
      "category": "public.app-category.utilities",
      "target": [
        "default"
      ]
    },
    "linux": {
      "icon": "img/wgec-icon.svg",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ]
    },
    "win": {
      "icon": "img/wgec-icon.svg",
      "target": [
        "nsis",
        "msi"
      ]
    }
  },
  "dependencies": {
    "chart.js": "^2.7.3",
    "chartjs-plugin-zoom": "^0.7.0",
    "plotly.js-dist": "^1.45.2"
  },
  "devDependencies": {
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5"
  }
}
